{
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jasmine/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2015
    },
    "plugins": [
        "jasmine"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jasmine/no-unsafe-spy": [
            "off"
        ],
        "jasmine/no-spec-dupes": [
            "off"
        ],
        "jasmine/no-suite-dupes": [
            "off"
        ],
        "jasmine/new-line-before-expect": [
            "off"
        ],
        "jasmine/new-line-between-declarations": [
            "off"
        ]
    }
}